extends layout

block content
  .container
    .row 
      .col-12.d-flex.align-items-center.justify-content-end.text-center.mt-3
        if !token
          a.btn-hero(href="/users/signIn") Sign In / Sign Up
        if token
          span.lead Username: 
            span.lead.mr-2= user.username
          a.btn-hero.ml-2(href="/users/logout") Logout

    .row.mt-3
      .col-12.d-flex.align-items-center.justify-content-center.text-center
        h1.display-1 Welcome To PSL

    .row.mt-3
      .col-12.col-md-6.mt-2
        .card.border-dark.d-flex.align-items-center.justify-content-center.bg-light
          .card-head.d-flex.align-items-center.justify-content-center.p-3
            i.far.fa-eye.fa-3x.text-dark
          .card-body.d-flex.align-items-center.justify-content-center.border-top.border-dark
            a.btn-hero.text-center(href="/matches/list") 
              span.card-title View Matches
      if token
        .col-12.col-md-6.mt-2
          .card.border-dark.d-flex.align-items-center.justify-content-center.bg-light
            .card-head.d-flex.align-items-center.justify-content-center.p-3
              i.far.fa-plus-square.fa-3x.text-dark
            .card-body.d-flex.align-items-center.justify-content-center.border-top.border-dark
              a.btn-hero.text-center(href="/matches/add") 
                span.card-title Add new Match